<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>

<BorderPane prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.proyecto.estacionmonitoreo.viewController.EcoMonitorGUI">
    
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    
    <top>
        <VBox spacing="10.0" style="-fx-background-color: #2c3e50; -fx-background-radius: 5;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
           <children>
               
               <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="662.0" text="EcoMonitor - Sistema de Monitoreo en Tiempo Real" textFill="WHITE">
                   <font>
                       <Font name="Arial Bold" size="24.0" />
                   </font>
               </Label>
               
               <HBox alignment="CENTER" spacing="15.0">
                  <children>
                      <Button fx:id="startButton" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 25;" text="Iniciar Monitoreo" />
                      <Button fx:id="stopButton" disable="true" onAction="#stopMonitoring" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 25;" text="Detener Monitoreo" />
                      <Button onAction="#resetCharts" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 25;" text="Reiniciar Graficos" />
                  </children>
               </HBox>
               
               <HBox alignment="CENTER" spacing="30.0">
                   <padding>
                       <Insets top="10.0" />
                   </padding>
                  <children>
                      
                      <Label fx:id="statusLabel" text="Estado: Detenido" textFill="LIGHTGRAY">
                          <font>
                              <Font name="Arial Bold" size="14.0" />
                          </font>
                      </Label>
                      
                      <Label fx:id="readingsLabel" text="Lecturas: 0" textFill="LIGHTGRAY">
                          <font>
                              <Font name="Arial" size="14.0" />
                          </font>
                      </Label>
                      
                      <Label fx:id="alertsLabel" text="Alertas: 0" textFill="LIGHTGRAY">
                          <font>
                              <Font name="Arial" size="14.0" />
                          </font>
                      </Label>
                      
                      <Label fx:id="memoryLabel" text="Memoria: 0 MB" textFill="LIGHTGRAY">
                          <font>
                              <Font name="Arial" size="14.0" />
                          </font>
                      </Label>
                  </children>
               </HBox>
           </children>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #ecf0f1;">
           <content>
               <GridPane alignment="TOP_CENTER" hgap="15.0" vgap="15.0">
                   <padding>
                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                   </padding>
                  <children>
                      
                      <VBox prefHeight="300.0" prefWidth="400.0" spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);" GridPane.columnIndex="0" GridPane.rowIndex="0">
                          <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                          </padding>
                         <children>
                             
                             <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <children>
                                    <Label style="-fx-text-fill: #e74c3c;" text="Temperatura">
                                        <font>
                                            <Font name="Arial Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Label fx:id="tempValueLabel" style="-fx-text-fill: #e74c3c;" text="-- C">
                                        <font>
                                            <Font name="Arial Bold" size="20.0" />
                                        </font>
                                    </Label>
                                </children>
                             </HBox>
                             
                             <LineChart fx:id="tempChart" animated="false" createSymbols="false" legendVisible="false" prefHeight="250.0" style="CHART_COLOR_1: #e74c3c;" title="Temperatura">
                                 <xAxis>
                                     <NumberAxis autoRanging="true" forceZeroInRange="false" label="Tiempo (s)" side="BOTTOM" />
                                 </xAxis>
                                 <yAxis>
                                     <NumberAxis autoRanging="true" label="C" side="LEFT" />
                                 </yAxis>
                             </LineChart>
                         </children>
                      </VBox>
                      
                      <VBox prefHeight="300.0" prefWidth="400.0" spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);" GridPane.columnIndex="1" GridPane.rowIndex="0">
                          <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                          </padding>
                         <children>
                             
                             <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <children>
                                    <Label style="-fx-text-fill: #3498db;" text="Humedad">
                                        <font>
                                            <Font name="Arial Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Label fx:id="humidityValueLabel" style="-fx-text-fill: #3498db;" text="-- porciento">
                                        <font>
                                            <Font name="Arial Bold" size="20.0" />
                                        </font>
                                    </Label>
                                </children>
                             </HBox>
                             
                             <LineChart fx:id="humidityChart" animated="false" createSymbols="false" legendVisible="false" prefHeight="250.0" style="CHART_COLOR_1: #3498db;" title="Humedad">
                                 <xAxis>
                                     <NumberAxis autoRanging="true" forceZeroInRange="false" label="Tiempo (s)" side="BOTTOM" />
                                 </xAxis>
                                 <yAxis>
                                     <NumberAxis autoRanging="true" label="porciento" side="LEFT" />
                                 </yAxis>
                             </LineChart>
                         </children>
                      </VBox>
                      
                      <VBox prefHeight="300.0" prefWidth="400.0" spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);" GridPane.columnIndex="0" GridPane.rowIndex="1">
                          <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                          </padding>
                         <children>
                             
                             <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <children>
                                    <Label style="-fx-text-fill: #f39c12;" text="CO2">
                                        <font>
                                            <Font name="Arial Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Label fx:id="co2ValueLabel" style="-fx-text-fill: #f39c12;" text="-- ppm">
                                        <font>
                                            <Font name="Arial Bold" size="20.0" />
                                        </font>
                                    </Label>
                                </children>
                             </HBox>
                             
                             <LineChart fx:id="co2Chart" animated="false" createSymbols="false" legendVisible="false" prefHeight="250.0" style="CHART_COLOR_1: #f39c12;" title="CO2">
                                 <xAxis>
                                     <NumberAxis autoRanging="true" forceZeroInRange="false" label="Tiempo (s)" side="BOTTOM" />
                                 </xAxis>
                                 <yAxis>
                                     <NumberAxis autoRanging="true" label="ppm" side="LEFT" />
                                 </yAxis>
                             </LineChart>
                         </children>
                      </VBox>
                      
                      <VBox prefHeight="300.0" prefWidth="400.0" spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);" GridPane.columnIndex="1" GridPane.rowIndex="1">
                          <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                          </padding>
                         <children>
                             
                             <HBox alignment="CENTER_LEFT" spacing="10.0">
                                <children>
                                    <Label style="-fx-text-fill: #9b59b6;" text="Ruido">
                                        <font>
                                            <Font name="Arial Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Label fx:id="noiseValueLabel" style="-fx-text-fill: #9b59b6;" text="-- dB">
                                        <font>
                                            <Font name="Arial Bold" size="20.0" />
                                        </font>
                                    </Label>
                                </children>
                             </HBox>
                             
                             <LineChart fx:id="noiseChart" animated="false" createSymbols="false" legendVisible="false" prefHeight="250.0" style="CHART_COLOR_1: #9b59b6;" title="Ruido">
                                 <xAxis>
                                     <NumberAxis autoRanging="true" forceZeroInRange="false" label="Tiempo (s)" side="BOTTOM" />
                                 </xAxis>
                                 <yAxis>
                                     <NumberAxis autoRanging="true" label="dB" side="LEFT" />
                                 </yAxis>
                             </LineChart>
                         </children>
                      </VBox>
                  </children>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
               </GridPane>
           </content>
        </ScrollPane>
    </center>
    
    <right>
        <VBox prefWidth="300.0" spacing="10.0" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
           <children>
               
               <Label style="-fx-text-fill: #e74c3c;" text="Alertas del Sistema">
                   <font>
                       <Font name="Arial Bold" size="16.0" />
                   </font>
               </Label>
               
               <TextArea fx:id="alertsTextArea" editable="false" prefHeight="300.0" style="-fx-control-inner-background: #fff; -fx-font-family: 'Courier New'; -fx-font-size: 11px;" wrapText="true" />
               
               <Button onAction="#clearAlerts" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Limpiar Alertas" />
               
               <Separator />
               
               <VBox spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 10;">
                   <padding>
                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                   </padding>
                  <children>
                      
                      <Label text="Informacion del Sistema">
                          <font>
                              <Font name="Arial Bold" size="14.0" />
                          </font>
                      </Label>
                      
                      <Separator />
                      
                      <Label fx:id="jvmLabel" text="JVM: --">
                          <font>
                              <Font name="Arial" size="12.0" />
                          </font>
                      </Label>
                      
                      <Label fx:id="maxMemLabel" text="Memoria Max: -- MB">
                          <font>
                              <Font name="Arial" size="12.0" />
                          </font>
                      </Label>
                      
                      <Label text="Sensores Activos: 4">
                          <font>
                              <Font name="Arial" size="12.0" />
                          </font>
                      </Label>
                  </children>
               </VBox>
           </children>
        </VBox>
    </right>
    
</BorderPane>
